library IEEE;
use IEEE.STD_LOGIC_1164.all;
use std.standard.severity_level;

   package OverflowCheck is 
	
	    process check 
	        (signal Overflow : in std_logic);
			  end OverflowCheck;
			  
			  package body OverflowCheck is 
			     process check 
				   (signal Overflow : in std_logic) is
					
					  begin 
					  
					  if Overflow = "1" then 
					     
						  report "error";
						  
						  end if;
						  
						  
						  end check;
						  end OverflowCheck; 
						  
					
					
			    
	
	
	
	
	
	
	
	
	
	
